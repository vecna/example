doctype html
html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title #{pageTitle}

        link(rel='stylesheet', href='/css/bootstrap.css')
        script(type='text/javascript', src='/js/vendor/jquery.js')
        script(type='text/javascript', src='/js/bootstrap.min.js')
        script(type='text/javascript', src='/js/lodash.min.js')

        script(type='text/javascript', src='js/vendor/d3.min.js')
        script(type='text/javascript', src='js/vendor/d3-sankey.min.js')

        script(type='text/javascript', src='js/local/trex.js')
        link(rel='stylesheet', href='js/local/trex.css')

        script(type='text/javascript', src='/campaign/example.js')
        link(rel='stylesheet', href='/campaign/example.css')

        link(rel='stylesheet', type='text/css', href='/css/datatables.min.css')
        script(type='text/javascript', charset='utf8', src='/js/datatables.min.js')

        meta(property='og:title', content='#{previewTitle}')
        meta(property='og:image', content='campaign/#{previewImage}')
        meta(property='og:url', content='#{previewURL}')
        meta(property='og:type', content='#{previewTYPE}')
        meta(property='og:description', content='#{previewDescription}')

    body(onload='initializeLanding(null, "example", "Lore ipsum is bullshit", "#sankeytable");')

        nav.navbar.navbar-default.navbar-fixed-top
            .container
                ul.nav.navbar-nav
                    li(class="landing")
                        a(onclick='loadPage("#content", "landing");' class='links') Home
                    li(class="what-to-do")
                        a(onclick='loadPage("#content", "what-to-do");' class='links') What to do
                    li(class="archive")
                        a(onclick='loadPage("#content", "archive");' class='links') Analysis Details
                    li(class="about")
                        a(onclick='loadPage("#content", "about");' class='links') About
                    li.dropdown
                        a.dropdown-toggle(data-toggle='dropdown', href='#') Other initiatives
                            span.caret
                        ul.dropdown-menu
                            li
                                include otherInitiatives

        // do not rename `content` because it is hardcoded in trex.js
        div#content

        include footer
